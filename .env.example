# Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# Slack Integration
# ============================================
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# ============================================
# Microsoft Teams Integration (Optional)
# ============================================
# Get these from Azure Portal
TEAMS_APP_ID=your-app-id-here
TEAMS_APP_PASSWORD=your-app-password-here

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=agent
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=agent_db
POSTGRES_PORT=5432

# Full database URL (alternative to individual settings)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# Redis Configuration
# ============================================
REDIS_PORT=6379
# REDIS_URL=redis://localhost:6379/0

# ============================================
# Agent Configuration
# ============================================
AGENT_CONFIG_PATH=/app/config/my-agent.yaml
LOG_LEVEL=INFO
AGENT_PORT=8080

# ============================================
# Security
# ============================================
# Generate secure random strings for these
JWT_SECRET=your-jwt-secret-here-use-long-random-string
ENCRYPTION_KEY=your-encryption-key-here-use-32-char-string

# ============================================
# Data Sources (Optional)
# ============================================
# Snowflake
SNOWFLAKE_USER=your-user
SNOWFLAKE_PASSWORD=your-password
SNOWFLAKE_ACCOUNT=your-account

# Salesforce
SALESFORCE_CLIENT_ID=your-client-id
SALESFORCE_CLIENT_SECRET=your-client-secret

# Shopify
SHOPIFY_API_KEY=your-api-key
SHOPIFY_API_SECRET=your-api-secret
SHOPIFY_STORE_URL=your-store.myshopify.com

# ============================================
# Monitoring (Optional)
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# ============================================
# Advanced Settings
# ============================================
# Number of worker processes
WORKERS=4

# Maximum request timeout (seconds)
TIMEOUT=120

# Enable debug mode (set to false in production)
DEBUG=false

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000
